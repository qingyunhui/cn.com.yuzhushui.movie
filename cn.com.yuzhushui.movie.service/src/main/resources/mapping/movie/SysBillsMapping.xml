<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.yuzhushui.movie.sys.biz.dao.SysBillsDao">
	<resultMap type="cn.com.yuzhushui.movie.sys.biz.entity.SysBills" id="BaseResultMap">
        <result property="id" column="id" javaType="Integer"/>
        <result property="subject" column="subject" javaType="String"/>
        <result property="content" column="content" javaType="String"/>
        <result property="debtor" column="debtor" javaType="String"/>
        <result property="debtorId" column="debtor_id" javaType="Integer"/>
        <result property="money" column="money" javaType="Long"/>
        <result property="lender" column="lender" javaType="String"/>
        <result property="lenderId" column="lender_id" javaType="Integer"/>
        <result property="status" column="status" javaType="Integer"/>
        <result property="keyword" column="keyword" javaType="Integer"/>
        <result property="tradeType" column="trade_type" javaType="Integer"/>
        <result property="ctime" column="ctime" javaType="Date"/>
        <result property="creater" column="creater" javaType="String"/>
        <result property="createrId" column="creater_id" javaType="Integer"/>
        <result property="etime" column="etime" javaType="Date"/>
        <result property="editor" column="editor" javaType="String"/>
        <result property="editorId" column="editor_id" javaType="Integer"/>
        <result property="reason" column="reason" javaType="String"/>
        <result property="comments" column="comments" javaType="String"/>
        <result property="deleted" column="deleted" javaType="Integer"/>
	</resultMap>
	
	<sql id="full-columns" >
        t.id,
        t.subject,
        t.content,
        t.debtor,
        t.debtor_id,
        t.money,
        t.lender,
        t.lender_id,
        t.status,
        t.keyword,
        t.trade_type,
        t.ctime,
        t.creater,
        t.creater_id,
        t.etime,
        t.editor,
        t.editor_id,
        t.reason,
        t.comments,
        t.deleted
	</sql>
	
	<!-- 查询条件 -->
	<sql id="queryCriteria">
		 <if test="@OGNL@isNotEmpty(id)">
            AND t.id = #{id}
         </if>
		 <if test="@OGNL@isNotEmpty(subject)">
            AND t.subject = #{subject}
         </if>
		 <if test="@OGNL@isNotEmpty(content)">
            AND t.content = #{content}
         </if>
		 <if test="@OGNL@isNotEmpty(debtor)">
            AND t.debtor = #{debtor}
         </if>
         <!-- 查询借款人 or 出借人的账单 -->
         <if test="@OGNL@isNotEmpty(queryDebtorIdWithlenderId)">
         	AND (t.debtor_id = #{debtorId} OR t.lender_id = #{lenderId}) 
         </if>
         <if test="@OGNL@isEmpty(queryDebtorIdWithlenderId)">
         	 <if test="@OGNL@isNotEmpty(lenderId)">
            	AND t.lender_id = #{lenderId}
         	</if>
         	<if test="@OGNL@isNotEmpty(debtorId)">
            	AND t.debtor_id = #{debtorId}
         	</if>
         </if>
		 <if test="@OGNL@isNotEmpty(money)">
            AND t.money = #{money}
         </if>
		 <if test="@OGNL@isNotEmpty(lender)">
            AND t.lender = #{lender}
         </if>
		 <if test="@OGNL@isNotEmpty(status)">
            AND t.status = #{status}
         </if>
         <if test="@OGNL@isNotEmpty(keyword)">
            AND t.keyword = #{keyword}
         </if>
		 <if test="@OGNL@isNotEmpty(tradeType)">
            AND t.trade_type = #{tradeType}
         </if>
		 <if test="@OGNL@isNotEmpty(ctime)">
            AND t.ctime = #{ctime}
         </if>
		 <if test="@OGNL@isNotEmpty(creater)">
            AND t.creater = #{creater}
         </if>
		 <if test="@OGNL@isNotEmpty(createrId)">
            AND t.creater_id = #{createrId}
         </if>
		 <if test="@OGNL@isNotEmpty(etime)">
            AND t.etime = #{etime}
         </if>
		 <if test="@OGNL@isNotEmpty(editor)">
            AND t.editor = #{editor}
         </if>
		 <if test="@OGNL@isNotEmpty(editorId)">
            AND t.editor_id = #{editorId}
         </if>
         <if test="@OGNL@isNotEmpty(reason)">
            AND t.reason = #{reason}
         </if>
		 <if test="@OGNL@isNotEmpty(comments)">
            AND t.comments = #{comments}
         </if>
		 <if test="@OGNL@isNotEmpty(deleted)">
            AND t.deleted = #{deleted}
         </if>
	</sql>

	<insert id="insert" parameterType="cn.com.yuzhushui.movie.sys.biz.entity.SysBills" >
		<![CDATA[
	        INSERT INTO sys_bills (
	            subject ,
	            content ,
	            debtor ,
	            debtor_id ,
	            money ,
	            lender ,
	            lender_id ,
	            status ,
	            keyword ,
	            trade_type ,
	            ctime ,
	            creater ,
	            creater_id ,
	            etime ,
	            editor ,
	            editor_id ,
	            reason ,
	            comments ,
	            deleted 
	        ) VALUES (
	        	#{subject},
	        	#{content},
	        	#{debtor},
	        	#{debtorId},
	        	#{money},
	        	#{lender},
	        	#{lenderId},
	        	#{status},
	        	#{keyword},
	        	#{tradeType},
	        	now(),
	        	#{creater},
	        	#{createrId},
	        	#{etime},
	        	#{editor},
	        	#{editorId},
	        	#{reason},
	        	#{comments},
	        	0
	        )
	    ]]>
    	<selectKey resultType="java.lang.Integer" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
        </selectKey>
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List" >
		<![CDATA[
	        INSERT INTO sys_bills (
	            subject ,
	            content ,
	            debtor ,
	            debtor_id ,
	            money ,
	            lender ,
	            lender_id ,
	            status ,
	            keyword ,
	            trade_type ,
	            ctime ,
	            creater ,
	            creater_id ,
	            etime ,
	            editor ,
	            editor_id ,
	            reason ,
	            comments ,
	            deleted 
	        ) VALUES 
	        <foreach collection="list" item="item" index="index" separator=",">
	        (
	        	#{subject},
	        	#{content},
	        	#{debtor},
	        	#{debtorId},
	        	#{money},
	        	#{lender},
	        	#{lenderId},
	        	#{status},
	        	#{keyword},
	        	#{tradeType},
	        	now(),
	        	#{creater},
	        	#{createrId},
	        	#{etime},
	        	#{editor},
	        	#{editorId},
	        	#{reason},
	        	#{comments},
	        	0
	        )
	        </foreach>
	    ]]>
	</insert>
	
	<update id="delete" parameterType="java.lang.Integer">
        UPDATE sys_bills SET deleted=1 
        WHERE deleted=0 AND
        	id = #{value}
	</update>
	<update id="deleteBatch" parameterType="list" >
        UPDATE sys_bills SET deleted=1 
        WHERE deleted=0 AND
        	id IN 
        <foreach collection="list" item = "id" open="(" separator="," close=")">
        	#{id}
		</foreach>
	</update>
	
	<update id="update" parameterType="cn.com.yuzhushui.movie.sys.biz.entity.SysBills">
        UPDATE sys_bills 
        <set>
        	<if test="@OGNL@isNotEmpty(subject)">
	            subject = #{subject},
	        </if>
        	<if test="@OGNL@isNotEmpty(content)">
	            content = #{content},
	        </if>
        	<if test="@OGNL@isNotEmpty(debtor)">
	            debtor = #{debtor},
	        </if>
        	<if test="@OGNL@isNotEmpty(debtorId)">
	            debtor_id = #{debtorId},
	        </if>
        	<if test="@OGNL@isNotEmpty(money)">
	            money = #{money},
	        </if>
        	<if test="@OGNL@isNotEmpty(lender)">
	            lender = #{lender},
	        </if>
        	<if test="@OGNL@isNotEmpty(lenderId)">
	            lender_id = #{lenderId},
	        </if>
        	<if test="@OGNL@isNotEmpty(status)">
	            status = #{status},
	        </if>
	        <if test="@OGNL@isNotEmpty(keyword)">
	            keyword = #{keyword},
	        </if>
        	<if test="@OGNL@isNotEmpty(tradeType)">
	            trade_type = #{tradeType},
	        </if>
        	<if test="@OGNL@isNotEmpty(ctime)">
	            ctime = #{ctime},
	        </if>
        	<if test="@OGNL@isNotEmpty(creater)">
	            creater = #{creater},
	        </if>
        	<if test="@OGNL@isNotEmpty(createrId)">
	            creater_id = #{createrId},
	        </if>
        	<if test="@OGNL@isNotEmpty(etime)">
	            etime = #{etime},
	        </if>
        	<if test="@OGNL@isNotEmpty(editor)">
	            editor = #{editor},
	        </if>
        	<if test="@OGNL@isNotEmpty(editorId)">
	            editor_id = #{editorId},
	        </if>
	        <if test="@OGNL@isNotEmpty(reason)">
	            reason = #{reason},
	        </if>
        	<if test="@OGNL@isNotEmpty(comments)">
	            comments = #{comments},
	        </if>
        	<if test="@OGNL@isNotEmpty(deleted)">
	            deleted = #{deleted},
	        </if>
        </set>
        WHERE deleted=0
        	AND id = #{id}
	</update>
	
	<select id="queryById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
	   	SELECT <include refid="full-columns" />
       	<![CDATA[
       	FROM sys_bills t
       	WHERE t.id = #{value}  and deleted=0
		]]>
    </select>
	
	<select id="query" parameterType="map" resultMap="BaseResultMap">
		SELECT <include refid="full-columns" />
	    FROM sys_bills t
		<where> <include refid="queryCriteria"/>  </where>
        ORDER BY t.ctime DESC
	</select>
	
	<select id="queryPage" parameterType="map" resultMap="BaseResultMap">
		SELECT 
        <include refid="full-columns" />
            FROM sys_bills t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
        LIMIT #{start}, #{pageSize}
	</select>

	<select id="queryCount" parameterType="map" resultType="java.lang.Integer">
		select count(id) FROM sys_bills t
        <where> <include refid="queryCriteria"/>  </where>
	</select>
	
	<!-- 根据给定借款人ID+状态、统计借款人历史支出总额 -->
	<select id="getTotalMoneyByDebtorIdWithStatus" parameterType="map" resultType="java.lang.Long">
	   	SELECT  SUM(t.money)
       		FROM sys_bills t 
       	WHERE deleted=0 AND t.debtor_id = #{debtorId} AND t.status = #{status} 
    </select>
	
</mapper>
